<h1> Sign up </h1> 

<%= form_for @user do |u| %>

    <p> <label> Check box if you are an admin </label>
    <%= u.check_box :admin %> </p> 

    <p> <label> Name </label> <br> 
    <%= u.text_field :name %> </p> 

    <p> <label> Email </label> <br> 
    <%= u.text_field :email %> </p>

    <p> <label> How many dollars would you like to add to your account? </label> <br> 
    <%= u.number_field :balance %> </p> 

    <p> <label> Password </label> <br>
    <%= u.password_field :password %> <br> 

    <p> <%= u.submit "Create User" %> </p> 
<% end %> 